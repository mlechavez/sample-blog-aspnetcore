<!DOCTYPE html>

<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewBag.Title</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300;400;700&display=swap" rel="stylesheet">
  <link href="~/content/static/site.css" rel="stylesheet" />
</head>
<body>
  <header>
	<nav class="navbar">
	  <div class="container">
		<a asp-controller="home" asp-action="index">Home</a>
		@if (User.Identity.IsAuthenticated) {
			@if (User.IsInRole("admin")) {
				<a asp-controller="admin" asp-action="getposts">Manage posts</a>
			}
			<a asp-controller="auth" asp-action="logout">Logout</a>
		} else {
			<a asp-controller="auth" asp-action="login">Login</a>
		}
	  </div>
	</nav>

  </header>
  <main class="main">
	@RenderBody()
  </main>
  <footer class="footer">
	<div class="container">
	  <p>Copyright &copy;. MyBlog 2022</p>
	</div>

  </footer>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	@RenderSection("scripts", required: false)
</body>
</html>
